<#@ template language="C#" hostspecific="true"#>
<#@ include file="$(SolutionDir)Soul.SqlbatisT4\PgSqlHelper.ttinclude"#>
<#@ import namespace="System.Linq" #>
<#@ import namespace="System.Text" #>
<# 
	//通过xml配置文件来配置，支持更加丰富的定制
	//var configuration = MysqlManager.GetConfiguration(Host);
	var configuration = MysqlManager.GetConfiguration("Host=localhost;Port=5432;Username=postgres;Password=1024;Database=postgres;SSL Mode=Disable;");
	var tables = MysqlManager.GetTables(configuration);
#>
using System;
using Soul.SqlBatis;
using System.ComponentModel.DataAnnotations;
using System.ComponentModel.DataAnnotations.Schema;

namespace Soul.SqlBatis.Entities
{	
<#foreach(var table in tables){#>

	/// <summary>
    /// <#=table.Description ?? string.Empty#>
    /// </summary>
	[Table("<#=table.TableName#>")]
	public partial class <#=table.TableName#> : Entity
	{
<#foreach(var column in table.Columns){#>
		/// <summary>
		/// <#=column.Description ?? string.Empty#>
		/// </summary>
		public <#=column.ColumnName == "Id" ? "override" : ""#> <#=column.Type#> <#=column.ColumnName#> { get; set; }
<#}#>
	}
<#}#>
}

